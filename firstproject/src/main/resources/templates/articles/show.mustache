{{>layouts/header}}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
        {{#article}}
            <tr>
                <th>{{id}}</th>
                <td>{{title}}</td>
                <td>{{content}}</td>
            </tr>
        {{/article}}
    </tbody>
</table>
<a href="/articles/{{article.id}}/edit" class="btn btn-success">Edit</a>
<a href="/articles" class="btn btn-primary">Go to Article List</a>
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">Delete</a>

{{>layouts/footer}}